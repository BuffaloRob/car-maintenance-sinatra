<h2>Edit Maintenance Item</h2>

<form action="/car_maintenance_items/<%=@car_maintenance_item.id%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label>Car: </label>
    <select name="car_id" >
        <% @cars.all.each do |car| %>
        <option value="<%=car.id%>"><%=car.name%></option>
        <% end %>
    </select> 
    <br/>

     <label>Choose the Maintenance:</label>
      <select name="maintenance_id" >
        <% @maintenance_items.all.each do |maintenance_item| %>
        <option value="<%=maintenance_item.id%>"><%=maintenance_item.name%></option>
        <% end %>
    </select> 
    <br/>

    <label>Mileage Performed:</label>    
    <input type="text" name="mileage_performed" value="<%=@car_maintenance_item.mileage_performed%>"> <br/>

    <label>Mileage Due:</label>
    <input type="text" name="mileage_due" value="<%=@car_maintenance_item.mileage_due%>"> <br/>

    <label>Cost $:</label>
    <input type="text" name="cost" value="<%=@car_maintenance_item.cost%>"> <br/>

    <input type="submit" value="Edit Maintenance Item">

</form>

