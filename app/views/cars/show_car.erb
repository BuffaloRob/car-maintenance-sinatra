<h1><%= @car.name %></h1>

<h4>Scheduled Maintenance</h4>
<% @maint_name_and_car_maint_item.each do |maintenance_name, car_maintenance_item| %>
        <div>
            <a href="/car_maintenance_items/<%= car_maintenance_item.id %>"> <%= maintenance_name %> </a>
        </div>
<% end %>

<h4>Actions</h4>

<p><a href="/cars/<%= @car.id %>/edit">Edit This Car</a></p>

<form action="/cars/<%= @car.id %>/delete" method="POST">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Car">
</form>

